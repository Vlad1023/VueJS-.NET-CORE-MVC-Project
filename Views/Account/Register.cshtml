@model Vue_Core.ViewModels.RegisterModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Form</title>
    <link rel="stylesheet" href="~/css/form.css">
</head>
<body>
    <form class="form" asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly" />
        <h1 class="form_title">Регистрация</h1>
        <a class="form_title" asp-action="Login" asp-controller="Account">Вход</a>
        <div class="form_group">
            <label class="form_label" asp-for="Login">Введите логин</label>
            <input class="form_input" placeholder="Email" type="text" asp-for="Login" />
            <span asp-validation-for="Login" />
        </div>
        <div class="form_group">
            <label class="form_label" asp-for="Password">Введите пароль</label>
            <input class="form_input" placeholder="Password" asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div>
        <div class="form_group">
            <label class="form_label" asp-for="ConfirmPassword">Повторите пароль</label>
            <input class="form_input" placeholder="Подтвердите пароль" asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" />
            </div>
        </div>
        <button type="submit" class="form_button">Регистрация</button>
</form>
</body>
</html>